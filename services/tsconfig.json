{
  "compilerOptions": {
    "paths": {
      "@jobs/*": ["./src/jobs/*"],
      "@typeorm/*": ["./src/typeorm/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "lib": ["es2021"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "include": ["src/**/*", ".env"], // Includes all TypeScript files under the "src" directory.
  "exclude": ["node_modules"] // Excludes the "node_modules" directory from compilation.
}
