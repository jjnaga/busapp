{
  "compilerOptions": {
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@logic/*": ["./src/logic/*"],
      "@routes/*": ["./src/routes/*"],
      "@typeorm/*": ["./src/utils/typeorm/*"],
      "@utils/*": ["./src/utils/*"]
    },
    "strict": true,
    "strictPropertyInitialization": false, // typeorm does not need initilization for
    "experimentalDecorators": true, // typeorm enable decorators
    "target": "ES2020",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./build"
    // "skipLibCheck": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
